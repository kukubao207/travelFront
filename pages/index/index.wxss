.container {
  height: 1500rpx;
  margin-top: 50rpx
}

.container .search {
  width: 735rpx;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
  background: #f95f5f;
}

.container .search-left {
  flex: 7;
  background: #f37f7f;
  text-align: left;
  margin-right: 14rpx
}

.container .search-left input {
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}

.search-placeholder {
  color: white;
  line-height: 20rpx;
}
.stateImg{
  width: 80rpx;
  height: 100rpx;
  padding: 0% 0% 2% 2%;
  margin: 0% 0% 0% 5%;
  align-items: center;
}
.container .search .search-left image {
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 15rpx;
}

.container .search .search-right {
  flex: 1.7;
  width: 80rpx;
  text-align: center;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: white;
}

.container .search .search-right image {
  width: 50rpx;
  height: 50rpx;
  padding: 5rpx;
  display: inline-block;
  margin-right: 10rpx
}

